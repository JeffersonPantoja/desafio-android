<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_java_pop_nome_repositorio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/item_java_pop_imagem_usuario"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome Do Repositório" />

    <TextView
        android:id="@+id/item_java_pop_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/item_java_pop_nome_repositorio"
        app:layout_constraintStart_toStartOf="@+id/item_java_pop_nome_repositorio"
        app:layout_constraintTop_toBottomOf="@+id/item_java_pop_nome_repositorio"
        tools:text="Descrição do repositõrio Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer sollicitudin nisi id tortor vehicula, dictum aliquam velit hendrerit. Quisque eget nulla urna" />

    <TextView
        android:id="@+id/item_java_pop_quantidade_forks"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawableStart="@drawable/ic_star_black_24dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/item_java_pop_descricao"
        app:layout_constraintTop_toBottomOf="@+id/item_java_pop_descricao"
        tools:text="640" />

    <TextView
        android:id="@+id/item_java_pop_quantidade_estrelas"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:drawableLeft="@drawable/ic_star_black_24dp"
        android:drawableStart="@drawable/ic_star_black_24dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/item_java_pop_quantidade_forks"
        app:layout_constraintTop_toTopOf="@+id/item_java_pop_quantidade_forks"
        tools:text="98" />

    <ImageView
        android:id="@+id/item_java_pop_imagem_usuario"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:contentDescription="@string/imagem_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_java_pop_nome_repositorio"
        app:layout_constraintTop_toTopOf="@+id/item_java_pop_nome_repositorio"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/item_java_pop_nome_usuario"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/item_java_pop_imagem_usuario"
        app:layout_constraintStart_toStartOf="@+id/item_java_pop_imagem_usuario"
        app:layout_constraintTop_toBottomOf="@+id/item_java_pop_imagem_usuario"
        tools:text="username" />

    <TextView
        android:id="@+id/item_java_pop_sobrenome_usuario"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_java_pop_nome_usuario"
        app:layout_constraintTop_toBottomOf="@+id/item_java_pop_nome_usuario"
        tools:text="Nome Sobrenome" />


</android.support.constraint.ConstraintLayout>